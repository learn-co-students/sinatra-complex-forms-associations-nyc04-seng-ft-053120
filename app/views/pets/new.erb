<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
    <p>
        <label>Pet Name:</label>
        <input type="text" id="pet_name" name="pet[name]">
    </p>

    <h2>Current Owners</h2>
    <% Owner.all.each do |owner| %>
        <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>">
            <%= owner.name %><br>
    <% end %>

    <h2>Create New Owner</h2>
    <label>Owner Name:</label>
    <input type="text" id="owner_name" name="owner[name]">
    <br><br>

    <input type="submit" value="Create Pet">
</form>