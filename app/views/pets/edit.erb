<h1>Update Pet</h1>

<h2>Pet Name: <% @pet.name %></h2>

<form method="POST" action="/pets/<%= @pet.id%>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label>Edit Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">
    <br>

    <h3>Current Owner</h3>
    <% Owner.all.each do |owner| %>
        <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>" <%= 'checked' if @pet.owner == owner %>>
            <%= owner.name %><br>
    <% end %>

    <h3>New Owner</h3>
    <label>Name: </label>
    <input type="text" id="owner_name" name="owner[name]">
    <br><br>

    <input type="submit" value="Update Pet">
</form>